<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="434.0" prefWidth="385.0" spacing="20" style="-fx-font-size: 14pt;" stylesheets="@css/add-purchase-style.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lambda.pharmacymangementsystem.controller.AddDrugController">
   <padding>
      <Insets bottom="30" left="30" right="30" top="30" />
   </padding>
   <children>
      <Label alignment="CENTER" contentDisplay="TEXT_ONLY" prefHeight="34.0" prefWidth="243.0" style="-fx-font-size: 28px; -fx-font-weight: bold;" text="Add new drug">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <VBox prefHeight="203.0" prefWidth="325.0" spacing="10.0">
         <children>
            <Label text="Name">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TextField fx:id="nameField" layoutX="50.0" layoutY="66.0" styleClass="custom-text-field" />
            <Label text="Quantity">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TextField fx:id="quantityField" styleClass="custom-text-field" />
            <Label text="Price">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TextField fx:id="priceField" styleClass="custom-text-field" />
            <Label text="Supplier ID">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <ComboBox  fx:id="supplierComboBox" prefHeight="35.0" prefWidth="243.0" styleClass="custom-combo-box" />
         </children>
         <padding>
            <Insets left="40.0" right="40.0" />
         </padding>
      </VBox>
      <Button fx:id="addButton" maxWidth="200" onAction="#addDrug" prefHeight="40" style="-fx-background-color: #45a049; -fx-text-fill: white;" text="Submit">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
   </children>
</VBox>
