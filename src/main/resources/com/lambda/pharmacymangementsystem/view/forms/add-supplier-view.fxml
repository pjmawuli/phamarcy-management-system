<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.lambda.pharmacymangementsystem.controller.AddSupplierController"
            prefWidth="600" prefHeight="400">
    <VBox xmlns:fx="http://javafx.com/fxml"
          spacing="10" alignment="CENTER" styleClass="modal-dialog">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <Label text="Add Supplier" styleClass="title"/>

        <GridPane vgap="15" hgap="15">
            <columnConstraints>
                <ColumnConstraints hgrow="NEVER" minWidth="100" prefWidth="150"/>
                <ColumnConstraints hgrow="ALWAYS" minWidth="200" prefWidth="400"/>
            </columnConstraints>

            <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

            <Label text="Contact:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="contactField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <Label text="Location:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <TextField fx:id="LocationField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        </GridPane>

        <Region VBox.vgrow="ALWAYS"/> <!-- Spacer -->

        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button text="Cancel" onAction="#handleCancel"/>
            <Button text="Save" onAction="#handleSave" defaultButton="true"/>
        </HBox>
    </VBox>
</AnchorPane>